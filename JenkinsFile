pipeline {
    agent any
    stages {
        stage('clean') {
            steps {
                 bat 'mvn clean'
            }
        }
         stage('checkstyle') {
              steps {
                 bat 'mvn checkstyle:checkstyle'
              }
         }
        stage('test-package') {
            steps {
                 bat 'mvn install'
            }
        }
        stage('containerize') {
             steps {
                 bat 'docker build -t habibahmedmagdy/machines:1.0.0 .'
             }
        }
        stage('publish') {
             when { branch "master" }
             steps {
                 script{
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'pwd', usernameVariable: 'username')]) {
                         bat "docker login -u ${username} -p ${pwd}"
                         bat 'docker push habibahmedmagdy/machines:1.0.0'
                    }
                 }
             }
        }
        stage('finalize') {
             steps {
                 echo 'Tests & Docker publish are completed SUCCESSFULLY'
             }
        }
    }

    post {
        always {
            bat 'docker logout'
        }
    }
}
